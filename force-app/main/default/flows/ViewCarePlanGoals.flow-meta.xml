    <decisions>
        <name>doesCarePlanHaveGoals</name>
        <label>Does Care Plan have goals ?</label>
        <locationX>487</locationX>
        <locationY>279</locationY>
        <defaultConnector>
            <targetReference>screenNoRelatedGoals</targetReference>
        </defaultConnector>
        <defaultConnectorLabel>[Default Outcome]</defaultConnectorLabel>
        <rules>
            <name>carePlanHasGoals</name>
            <conditionLogic>and</conditionLogic>
            <conditions>
                <leftValueReference>goalRecords</leftValueReference>
                <operator>IsNull</operator>
                <rightValue>
                    <booleanValue>false</booleanValue>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>screenRelatedGoals</targetReference>
            </connector>
            <label>Care Plan has goals</label>
        </rules>
    </decisions>
    <decisions>
        <name>isGoalSelected</name>
